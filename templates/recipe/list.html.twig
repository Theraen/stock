{% extends 'base.html.twig' %}

{% block title %}{% trans %}Recipes{% endtrans %}{% endblock %}

{% block body %}

    <div class="card mb-4 py-3 border-left-info">
        <div class="card-body">
            <h1 class="d-inline-block">{% trans %}Recipes{% endtrans %}</h1>
                <a href="{{ path('recipe_add') }}" class="btn btn-success btn-icon-split float-right">
                    <span class="icon text-white-50">
                        <i class="fas fa-plus"></i>
                    </span>
                    <span class="text">{% trans %}Add a recipe{% endtrans %}</span>
                </a>
            
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3">
        
        {{ form_start(form, {attr: {class: 'filter'}}) }}
            {{ form_row(form.q) }}
            <h4>{% trans %}Categories{% endtrans %}</h4>
            {{ form_row(form.categoriesRecipe) }}
            <button type="submit" class="btn btn-primary btn-block">{% trans %}Filter{% endtrans %} </button>
        {{ form_end(form) }}
        
            
        </div>
        <div class="col-lg-9">
            <div class="row">
                {% for recipe in recipes %}
                    <div class="col-xl-3 col-md-6 mb-4">
                        <a href="#">
                            <div class="card">
                                <img src="{{ asset('uploads/picture/recipe/' ~ recipe.picture) }}" alt="" width="100%">
                                <div class="card-body">
                                    <h5 class="card-title">{{ recipe.name}}</h5>
                                    <a href="{{ path('recipe_update', {id: recipe.id}) }}" class="btn btn-warning float-right"><i class="fas fa-edit"></i></a>
                                    <a href="{{ path('recipe_delete', {id: recipe.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                </div>
                            </div>
                        </a>
                        
                    </div>
                {% endfor %}
                
            </div>

            <div class="float-right">
                {{ knp_pagination_render(recipes) }}
            </div>
            
            
        </div>
    
    </div>
    

{% endblock %}
